<body>
    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}

    <div class="container">
        <center><h1>Modifier un produit</h1></center>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card custom-card">
                    <div class="card-body">
                        {# Votre formulaire ici #}
                        <div class="mb-3">
                            {{ form_label(form.nom, 'Nom du produit', {'label_attr': {'class': 'form-label custom-form-label'}}) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                            <div class="text-danger">{{ form_errors(form.nom) }}</div>
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.description, 'description', {'label_attr': {'class': 'form-label custom-form-label'}}) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            <div class="text-danger">{{ form_errors(form.description) }}</div>
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.prix, 'prix', {'label_attr': {'class': 'form-label custom-form-label'}}) }}
                            {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
                            <div class="text-danger">{{ form_errors(form.prix) }}</div>
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.Type, 'Type', {'label_attr': {'class': 'form-label custom-form-label'}}) }}
                            {{ form_widget(form.Type, {'attr': {'class': 'form-control'}}) }}
                            <div class="text-danger">{{ form_errors(form.Type) }}</div>
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.quantite, 'Quantité', {'label_attr': {'class': 'form-label custom-form-label'}}) }}
                            {{ form_widget(form.quantite, {'attr': {'class': 'form-control'}}) }}
                            <div class="text-danger">{{ form_errors(form.quantite) }}</div>
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.quantiteVendues, 'Quantité vendues', {'label_attr': {'class': 'form-label custom-form-label'}}) }}
                            {{ form_widget(form.quantiteVendues, {'attr': {'class': 'form-control'}}) }}
                            <div class="text-danger">{{ form_errors(form.quantiteVendues) }}</div>
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.imageFile, 'Image', {'label_attr': {'class': 'form-label custom-form-label'}}) }}
                            {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
                            <div class="text-danger">{{ form_errors(form.imageFile) }}</div>
                        </div>
                        <center>
                            <button type="submit" class="btn btn-primary" id="submit-btn">Enregistrer</button>
                        </center>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

