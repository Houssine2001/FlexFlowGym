{# templates/send_sms.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Envoyer un SMS{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card mt-5">
                    <div class="card-header">
                        <h3 class="text-center">Envoyer un SMS</h3>
                    </div>
                    <div class="card-body">
                        <form method="post" action="{{path('send_sms')}}">
                            <div class="form-group">
                                <label for="29678226"></label>
                            </div>

                            <div class="form-group" >
                                <label for="FlexFlow"></label>
                            </div>
                            <div class="form-group" >
                                <label for="Bonjour houssin,
Votre commande sera prête à être retirée. Vous pouvez venir la récupérer à tout moment.
Votre commande est valable pendant une semaine à partir d'aujourd'hui"></label>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block" id="btn"  style="margin-left: -190px;">Envoyer le SMS</button>
                        </form>
                    </div>
                </div>
                {% if smsSent %}
                    <div class="alert alert-success mt-3 text-center">Le SMS a été envoyé avec succès.</div>
                {% endif %}
            </div>
        </div>
    </div>


    <style>
    
      .card-body
      {
        position: relative;
        height: 323px;
      }

      #btn
      {
        position: relative;
        top: 47px;
        left: 188px;
    
      }

      #form-name
      {
        position: relative;
        top: 10px;
      }

      #form-message
      {
        position: relative;
        top: 27px;
      }
    </style>
{% endblock %}