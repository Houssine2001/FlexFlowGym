    <style>
        /* Styles pour rendre le checkbox visible et ajuster sa taille */
        .custom-checkbox {
            display: inline-block;
            position: relative;
            padding-left: 40px; /* Ajuster l'espace à gauche pour accueillir le checkbox plus grand */
            margin-right: 15px;
            cursor: pointer;
        }

        .custom-checkbox input {
            position: absolute;
            opacity: 0;
            cursor: pointer;
            height: 30px; /* Hauteur du checkbox */
            width: 30px; /* Largeur du checkbox */
        }

        .checkmark {
            position: absolute;
            top: 0;
            left: 0;
            height: 30px; /* Hauteur du checkbox */
            width: 30px; /* Largeur du checkbox */
            background-color: #eee;
            border: 1px solid #ccc;
            border-radius: 5px; /* Bord arrondi pour le checkbox */
        }

        .custom-checkbox input:checked ~ .checkmark:after {
            display: block;
        }

        .custom-checkbox .checkmark:after {
            content: "";
            position: absolute;
            display: none;
            left: 8px; /* Position de la coche à l'intérieur du checkbox */
            top: 4px; /* Position de la coche à l'intérieur du checkbox */
            width: 14px;
            height: 14px;
            border: solid #007bff;
            border-width: 0 3px 3px 0;
            transform: rotate(45deg);
        }
    </style>

