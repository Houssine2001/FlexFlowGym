    <style>
        /* Style pour le formulaire */
        .form-container {
            background-color: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
            width: 90%;
            max-width: 900px;
            margin: 20px auto -20px auto; /* Réduire la marge supérieure */
            display: grid;
            grid-template-columns: 2fr 1fr; /* Réduire la largeur de la première colonne */
            gap: 20px;
        }

        /* Titre du formulaire */
        .form-title {
            text-align: center;
            margin-bottom: 20px;
            font-size: 24px;
            color: #343a40;
            grid-column: span 2;
        }

        /* Champs de formulaire */
        input[type="text"], input[type="email"], select {
            width: 100%;
            padding: 12px;
            margin-bottom: 20px;
            border: 1px solid #ced4da;
            border-radius: 5px;
            transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
        }

        /* Effet de survol pour les champs de formulaire */
        input[type="text"]:focus, input[type="email"]:focus, select:focus {
            border-color: #4e73df;
            outline: 0;
            box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.25);
        }

        /* Bouton de soumission */
        .submit-btn {
            width: 40%;
            padding: 12px;
            margin-top: 20px;
            background-color: #4e73df;
            border: none;
            border-radius: 5px;
            color: #fff;
            cursor: pointer;
            transition: background-color 0.15s ease-in-out;
        }

        /* Effet de survol pour le bouton de soumission */
        .submit-btn:hover {
            background-color: #375a7f;
        }

        /* Style pour l'image */
        .image-column {
            text-align: right;
            grid-column: 1/ 2; /* Placer l'image dans la première colonne */
            margin-top: 20px;
        }

        /* Ajustez la taille de l'image */
        .image-column img {
            width: 350px; /* Ajustez la taille de l'image selon vos préférences */
        }
        
    </style>
</head>

<body>
    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}

    <div class="form-container">
    
        <h1 class="form-title">Créer une nouvelle offre</h1>
        {{ form_start(form) }}
        <div class="image-column"> <!-- Placer cette balise dans la première colonne -->
            <div class="form-group"> <!-- Ajouter cette balise pour maintenir l'alignement des champs -->
                <label></label>
                <img src="{{ asset('images/je mange.png') }}" alt="Your Image" width="150">
            </div>
        </div>
        <div>
            
            {{ form_row(form.nom)}}
            <div class="text-danger">
            {{ form_errors(form.nom) }}
        </div>
            <label for="specialite">Spécialité </i></label>
            <div style="position: relative;">
    {{ form_widget(form.specialite, {'attr': {'class': 'form-control', 'placeholder': 'Spécialité'}}) }}
    <i class="fas fa-chevron-down" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%);"></i>
</div>


        <div>
           
            <div>
                {{ form_row(form.tarif_heure, {'attr': {'class': 'form-control', 'placeholder': 'Tarif par heure'}}) }}
                {% if form_errors(form.tarif_heure) %}
                    <div class="text-danger">
                        {{ form_errors(form.tarif_heure) }}
                    </div>
                {% endif %}
            </div>
            {{ form_row(form.etat_offre)}}
            {{ form_row(form.email) }}
            {{ form_row(form.coach) }}
        </div>
        <div class="form-buttons">
            <button type="submit" id="submitButton" class="submit-btn">  <i class="fas fa-plus-square"></i>  Ajouter offre</button>
            
            <a href="{{ path('app_consulter_offres') }}" class="btn btn-secondary" id="consulterOffres">
    <i class="fas fa-location-arrow"></i> Consulter les offres
</a>

    
        </div>
        {{ form_end(form) }}
    </div>
  




    
    

    
</body>
