        {{ form_widget(form.description, {'attr': {'class': 'form-control ' ~ errorClass }}) }}
        {% if form.description.vars.errors %}
                            <div class="invalid-feedback">
                                {{ form_errors(form.description) }}
                            </div>
                        {% endif %}
    </div>
