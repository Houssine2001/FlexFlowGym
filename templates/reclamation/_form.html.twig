{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
    <div class="mb-3">
        {{ form_label(form.titre_reclamation, 'Titre de la réclamation', {'label_attr': {'class': 'form-label'}}) }}
        {% set errorClass = form.titre_reclamation.vars.errors is not empty ? 'is-invalid' : '' %}
       {{ form_widget(form.titre_reclamation, {'attr': {'class': 'form-control ' ~ errorClass }}) }}
        {% if form.titre_reclamation.vars.errors %}
                            <div class="invalid-feedback">
                                {{ form_errors(form.titre_reclamation) }}
                            </div>
                        {% endif %}
    </div>
